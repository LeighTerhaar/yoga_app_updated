<h1>
  Edit favorite #<%= @favorite.id %>
</h1>

<hr>

<form action="/update_favorite/<%= @favorite.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @favorite.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="yogaflow_id">
      Yogaflow
    </label>

    <%= select_tag(:yogaflow_id, options_from_collection_for_select(Yogaflow.all, :id, :user_id, @favorite.yogaflow_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
