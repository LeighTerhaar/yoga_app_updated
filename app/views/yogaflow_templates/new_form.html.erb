<h1>
  Add a new yogaflow
</h1>


<hr>

<form action="/create_yogaflow" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label for="intention">
      Intention
    </label>

    <input type="text" id="intention" name="intention" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label for="yogatype">
      Yogatype
    </label>

    <input type="text" id="yogatype" name="yogatype" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create yogaflow
  </button>
</form>

<hr>

<a href="/yogaflows">
  Go back
</a>
