<h1>
  Add a new yogaflow
</h1>


<hr>

<!-- Form yogaflow start -->
<form action="/create_yogaflow" method="post">
<!-- Form yogaflow end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @yogaflow.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for intention start -->
  <div class="form-group">
    <label for="intention">
      Intention
    </label>

    <!-- Input for intention start -->
    <input type="text" id="intention" name="intention" class="form-control">
    <!-- Input for intention end -->
  </div>
  <!-- Label and input for intention end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for yogatype start -->
  <div class="form-group">
    <label for="yogatype">
      Yogatype
    </label>

    <!-- Input for yogatype start -->
    <input type="text" id="yogatype" name="yogatype" class="form-control">
    <!-- Input for yogatype end -->
  </div>
  <!-- Label and input for yogatype end -->

  <button class="btn btn-block btn-outline-secondary">
    Create yogaflow
  </button>
</form>

<hr>

<a href="/yogaflows">
  Go back
</a>
