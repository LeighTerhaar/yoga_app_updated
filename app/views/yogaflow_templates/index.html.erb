<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All yogaflows
    </h1>

    <a href="/yogaflows/new" class="btn btn-block btn-outline-secondary">
      Add a new yogaflow
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "yogaflow_templates/yogaflows_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Title
        </th>

        <th>
          Intention
        </th>

        <th>
          Description
        </th>

        <th>
          Yogatype
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @yogaflows.each do |yogaflow| %>
      <tr>
        <td>
          <%= yogaflow.id %>
        </td>

        <td>
          <% if yogaflow.user.present? %>
            <a href="/users/<%= yogaflow.user.id %>">
              <%= yogaflow.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= yogaflow.title %>
        </td>

        <td>
          <%= yogaflow.intention %>
        </td>

        <td>
          <%= yogaflow.description %>
        </td>

        <td>
          <%= yogaflow.yogatype %>
        </td>

        <td>
          <%= time_ago_in_words(yogaflow.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(yogaflow.updated_at) %> ago
        </td>

        <td>
          <a href="/yogaflows/<%= yogaflow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @yogaflows, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
