<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Title
        </th>

        <th>
          Intention
        </th>

        <th>
          Description
        </th>

        <th>
          Yogatype
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @yogaflows.each do |yogaflow| %>
      <tr>
        <!-- Display yogaflow.id start -->
        <td>
          <%= yogaflow.id %>
        </td>
        <!-- Display yogaflow.id end -->

        <!-- Display yogaflow.user_id start -->
        <td>
          <%= yogaflow.user_id %>
        </td>
        <!-- Display yogaflow.user_id end -->

        <!-- Display yogaflow.title start -->
        <td>
          <%= yogaflow.title %>
        </td>
        <!-- Display yogaflow.title end -->

        <!-- Display yogaflow.intention start -->
        <td>
          <%= yogaflow.intention %>
        </td>
        <!-- Display yogaflow.intention end -->

        <!-- Display yogaflow.description start -->
        <td>
          <%= yogaflow.description %>
        </td>
        <!-- Display yogaflow.description end -->

        <!-- Display yogaflow.yogatype start -->
        <td>
          <%= yogaflow.yogatype %>
        </td>
        <!-- Display yogaflow.yogatype end -->

        <!-- Display yogaflow.created_at start -->
        <td>
          <%= time_ago_in_words(yogaflow.created_at) %> ago
        </td>
        <!-- Display yogaflow.created_at end -->

        <!-- Display yogaflow.updated_at start -->
        <td>
          <%= time_ago_in_words(yogaflow.updated_at) %> ago
        </td>
        <!-- Display yogaflow.updated_at end -->

        <td>
          <a href="/yogaflows/<%= yogaflow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
