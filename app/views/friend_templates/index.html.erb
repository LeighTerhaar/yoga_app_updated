<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friends
    </h1>

    <a href="/friends/new" class="btn btn-block btn-outline-secondary">
      Add a new friend
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Follower
        </th>

        <th>
          Leader
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <!-- Display friend.id start -->
        <td>
          <%= friend.id %>
        </td>
        <!-- Display friend.id end -->

        <!-- Display friend.follower_id start -->
        <td>
          <%= friend.follower.email %>
        </td>
        <!-- Display friend.follower_id end -->

        <!-- Display friend.leader_id start -->
        <td>
          <%= friend.leader_id %>
        </td>
        <!-- Display friend.leader_id end -->

        <!-- Display friend.created_at start -->
        <td>
          <%= time_ago_in_words(friend.created_at) %> ago
        </td>
        <!-- Display friend.created_at end -->

        <!-- Display friend.updated_at start -->
        <td>
          <%= time_ago_in_words(friend.updated_at) %> ago
        </td>
        <!-- Display friend.updated_at end -->

        <td>
          <a href="/friends/<%= friend.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
