<!-- Validation failure messages -->
<% if @friend.present? %>
  <% if @friend.errors.any? %>
    <% @friend.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new friend
</h1>


<hr>

<!-- Form friend start -->
<form action="/create_friend" method="post">
<!-- Form friend end -->

  <!-- Label and input for follower_id start -->
  <div class="form-group">
    <label for="follower_id">
      Follower
    </label>

    <!-- Input for follower_id start -->
    <input type="text" id="follower_id" name="follower_id" class="form-control" value="<%= @friend.follower_id %>">
    <!-- Input for follower_id end -->
  </div>
  <!-- Label and input for follower_id end -->

  <!-- Label and input for leader_id start -->
  <div class="form-group">
    <label for="leader_id">
      Leader
    </label>

    <!-- Input for leader_id start -->
    <input type="text" id="leader_id" name="leader_id" class="form-control" value="<%= @friend.leader_id %>">
    <!-- Input for leader_id end -->
  </div>
  <!-- Label and input for leader_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create friend
  </button>
</form>

<hr>

<a href="/friends">
  Go back
</a>
