<% if @friend.errors.any? %>
  <% @friend.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit friend #<%= @friend.id %>
</h1>

<hr>

<form action="/update_friend/<%= @friend.id %>" method="post">

  <div class="form-group">
    <label for="follower_id">
      Follower
    </label>

    <%= select_tag(:follower_id, options_from_collection_for_select(User.all, :id, :email, @friend.follower_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="leader_id">
      Leader
    </label>

    <%= select_tag(:leader_id, options_from_collection_for_select(User.all, :id, :email, @friend.leader_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update friend
  </button>
</form>

<hr>

<a href="/friends">
  Go back
</a>
