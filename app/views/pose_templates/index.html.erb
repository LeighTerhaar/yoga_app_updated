<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All poses
    </h1>

    <a href="/poses/new" class="btn btn-block btn-outline-secondary">
      Add a new pose
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Yogaflow
        </th>

        <th>
          Name
        </th>

        <th>
          Sanskrit
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @poses.each do |pose| %>
      <tr>
        <!-- Display pose.id start -->
        <td>
          <%= pose.id %>
        </td>
        <!-- Display pose.id end -->

        <!-- Display pose.yogaflow_id start -->
        <td>
          <%= pose.yogaflow_id %>
        </td>
        <!-- Display pose.yogaflow_id end -->

        <!-- Display pose.name start -->
        <td>
          <%= pose.name %>
        </td>
        <!-- Display pose.name end -->

        <!-- Display pose.sanskrit start -->
        <td>
          <%= pose.sanskrit %>
        </td>
        <!-- Display pose.sanskrit end -->

        <!-- Display pose.picture start -->
        <td>
          <img src='<%= pose.picture %>' class='img-fluid'>
        </td>
        <!-- Display pose.picture end -->

        <!-- Display pose.created_at start -->
        <td>
          <%= time_ago_in_words(pose.created_at) %> ago
        </td>
        <!-- Display pose.created_at end -->

        <!-- Display pose.updated_at start -->
        <td>
          <%= time_ago_in_words(pose.updated_at) %> ago
        </td>
        <!-- Display pose.updated_at end -->

        <td>
          <a href="/poses/<%= pose.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
