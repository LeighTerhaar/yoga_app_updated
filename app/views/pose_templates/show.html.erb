<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pose #<%= @pose.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/poses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/poses/<%= @pose.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit pose
        </a>
      </div>

      <div class="col">
        <a href="/delete_pose/<%= @pose.id %>" class="btn btn-block btn-outline-secondary">
          Delete pose
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Yogaflow
      </dt>
      <dd>
        <% if @pose.yogaflow.present? %>
          <a href="/yogaflows/<%= @pose.yogaflow_id %>">
            <%= @pose.yogaflow.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @pose.name %>
      </dd>

      <dt>
        Sanskrit
      </dt>
      <dd>
        <%= @pose.sanskrit %>
      </dd>

      <dt>
        Picture
      </dt>
      <dd>
        <img src="<%= @pose.picture %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@pose.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@pose.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

